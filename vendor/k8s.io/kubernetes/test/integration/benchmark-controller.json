{
  "kind": "ReplicationController",
  "apiVersion": "v1",
  "metadata": {
     "name": "test-controller",
     "namespace": "test",
     "labels": {"name": "test-controller"}
  },
  "spec": {
    "replicas": 0,
    "selector": {"name": "test-pod"},
    "template": {
       "metadata": {
          "namespace": "test",
          "labels": {"name": "test-pod"}
       },
       "spec": {
           "containers": [{
             "name": "test-container",
             "image": "k8s.gcr.io/pause:3.1"
           }]
       }
    }
  }
}
